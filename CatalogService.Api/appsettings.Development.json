{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Properties": {
      "Application": "CatalogService",
      "Environment": "Development"
    }
  },
  "ConnectionStrings": {
    "CatalogServiceLocal": "Host=localhost;Port=5432;Database=catalogservice;Username=postgres;Password=postgres;",
    "CatalogServiceDocker": "Host=catalogservice.database;Port=5432;Database=catalogservice;Username=postgres;Password=postgres;"
  }
}
